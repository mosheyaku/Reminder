<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="392.0" prefWidth="421.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.reminder.ReminderController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox alignment="CENTER" prefHeight="57.0" prefWidth="318.0">
      <children>
         <ComboBox fx:id="dayComboBox" prefWidth="150.0" />
         <ComboBox fx:id="monthComboBox" prefWidth="150.0" />
         <ComboBox fx:id="yearComboBox" prefWidth="150.0" />
      </children>
   </HBox>

    <Label fx:id="welcomeText" />
   <TextArea fx:id="textArea" prefHeight="200.0" prefWidth="200.0" />
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <children>
         <Button mnemonicParsing="false" onAction="#savePressed" text="Save" />
         <Button mnemonicParsing="false" onAction="#loadPressed" text="Load" />
      </children>
   </HBox>
</VBox>
